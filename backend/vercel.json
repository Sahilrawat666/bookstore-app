{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "buildCommand": "cd backend/frontend && npm install && npm run build",
  "outputDirectory": "backend/frontend/dist",
  "routes": [
    {
      "src": "^/book(?:/.*)?$",
      "dest": "backend/index.js"
    },
    {
      "src": "^/user(?:/.*)?$",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/frontend/dist/index.html"
    }
  ]
}
